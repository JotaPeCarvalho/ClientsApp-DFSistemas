@model ClientModel
@{
    ViewData["Title"] = "Confirmação apagar o Cliente";
}

<div class="text-center mb-3">
    <h3>Realmente deseja apagar o cliente (@Model.Name)?</h3>
</div>
<a class="btn btn-primary d-block mb-2" role="button" asp-controller="Client" asp-action="Index">Cancelar Exclusão</a>
<a class="btn btn-danger d-block" role="button" asp-route-id="@Model.Id" asp-controller="Client" asp-action="Delete">Confirmar Exclusão</a>
